<form>
    <fields name="profile">
        <fieldset name="details" label="Details"
            addfieldpath="plugins/system/bliss/fields">

            <field
                name="city"
                type="cities"
                label="City"
                description="This is City"
                class="input-large"
                hint="Please enter city"
            >
                <option value="">-- Select City --</option>
                <option value="1">Foo</option>
            </field>

            <field
                name="address"
                type="text"
                label="Address"
                description="This is Address"
                class="input-xlarge"
                hint="Please enter address"
                showon="city:1"
                required="true"
            />

            <field
                name="phone"
                type="text"
                label="Phone"
                description="This is Phone"
                class=""
                hint="Please enter phone"
                showon="city:1"
            />

            <field
                name="birthday"
                type="calendar"
                label="Birthday"
                description="This is Birthday"
                class=""
                hint="Please enter birthday"
            />

        </fieldset>
    </fields>
</form>